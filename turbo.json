{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "prepare": {
      "dependsOn": [
        "^prepare"
      ]
    },
    "postinstall": {
      "dependsOn": [
        "^postinstall"
      ]
    },
    "typescript": {
      "dependsOn": [
        "^typescript"
      ]
    },
    "clean": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:ios": {
      "dependsOn": [
        "^dev"
      ]
    },
    "dev:android": {
      "dependsOn": [
        "^dev"
      ]
    }
  }
}
