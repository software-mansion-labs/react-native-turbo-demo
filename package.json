{
  "name": "react-native-turbo-webview",
  "version": "0.1.0",
  "private": true,
  "author": "Bartek Fryz <bartlomiej.fryz@swmansion.com> (https://github.com/Fryzu)",
  "description": "Adds support for Hotwired Turbo in React Native",
  "license": "MIT",
  "repository": "https://github.com/software-mansion-labs/react-native-turbo-demo",
  "bugs": {
    "url": "https://github.com/software-mansion-labs/react-native-turbo-demo/issues"
  },
  "homepage": "https://github.com/software-mansion-labs/react-native-turbo-demo#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "example": "yarn --cwd example",
    "bootstrap": "yarn install && yarn example server && lerna run pods",
    "prepare": "lerna run prepare",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typescript": "tsc --noEmit --composite false",
    "clean": "lerna run clean"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "example"
    ]
  },
  "devDependencies": {
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "@react-native-community/eslint-config": "^3.0.2",
    "prettier": "^2.0.5",
    "@commitlint/config-conventional": "^17.0.2",
    "commitlint": "^17.0.2",
    "@arkweid/lefthook": "^0.7.7",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.68.0",
    "jest": "^28.1.1",
    "pod-install": "^0.1.0",
    "react": "18.1.0",
    "react-native-builder-bob": "^0.20.0",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "lerna": "6.0.1",
    "del-cli": "^3.0.1"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
